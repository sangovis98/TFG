<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivItemProducto"
        android:layout_width="66dp"
        android:layout_height="66dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/descarga" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtItemDiaDieta"
                android:layout_width="343dp"
                android:layout_height="24dp"
                android:layout_marginStart="3dp"
                android:text="Nombre de producto"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/ivItemProducto"
                tools:layout_editor_absoluteY="-1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="ProteÃ­nas"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ivItemProducto"
                tools:layout_editor_absoluteY="24dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Hidratos"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                tools:layout_editor_absoluteY="24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Grasas"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                tools:layout_editor_absoluteY="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/pbItemProteinas"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@+id/ivItemProducto"
                tools:layout_editor_absoluteY="48dp" />

            <ProgressBar
                android:id="@+id/pbItemHidratos"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/pbItemProteinas"
                tools:layout_editor_absoluteY="48dp" />

            <ProgressBar
                android:id="@+id/pbItemGrasas"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/pbItemHidratos"
                tools:layout_editor_absoluteY="48dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>